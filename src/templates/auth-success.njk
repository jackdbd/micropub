{% extends "base.njk" %}

{% block js %}
<script defer src="scripts/auth-success.js"></script>
{% endblock %}

{% block content %}
<div>
  <p>You are now authenticated as <a href="{{ me }}">{{ me }}</a>.</p>
  <p>Send this <strong>authorization code</strong> to the token endpoint to obtain an access token.</p>
  <pre>
    <code id="code-block">{{ code }}</code>
  </pre>
  <button id="copy-btn">Copy</button>
</div>
{% endblock %}
