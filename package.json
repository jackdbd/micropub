{
  "name": "@jackdbd/micropub",
  "version": "0.0.1",
  "description": "A micropub server",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://giacomodebidda.com/"
  },
  "private": true,
  "keywords": [
    "fastify",
    "indieweb",
    "micropub"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/micropub"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run compile:ts && npm run copy:njk && npm run copy:static",
    "compile:njk": "node ./scripts/compile-templates.js",
    "compile:ts": "tsc -p tsconfig.json",
    "copy:njk": "cp -r src/templates dist/templates",
    "copy:static": "cp -r src/public dist/public",
    "clean": "rm -rf dist/ tsconfig.tsbuildinfo",
    "debug": "NODE_OPTIONS='--inspect' node dist/server.js",
    "dev": "NODE_ENV=development tsm ./src/server.ts | pino-pretty",
    "nuke": "rm -rf node_modules/ package-lock.json",
    "script:demo": "tsm ./scripts/demo.ts",
    "script:mf2": "tsm ./scripts/mf2.ts",
    "secure-session-keys": "node scripts/secure-session-keys.js",
    "start": "NODE_ENV=production node ./dist/server.js",
    "test": "NODE_ENV=test PINO_LOG_LEVEL=warn node --test --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=lcov.info --test-reporter=spec --test-reporter-destination=stdout",
    "test:ci": "NODE_ENV=test node --test",
    "watch": "find ./src -type f -printf '%T@ %p\n' | sort -nr | cut -d\\  -f2- | entr -r npm run dev",
    "watch:njk": "find ./src/templates/* -type f -printf '%T@ %p\n' | sort -nr | cut -d\\  -f2- | entr -r npm run compile:njk",
    "watch:src": "run-p watch:ts watch:njk --print-label",
    "watch:test": "NODE_ENV=test PINO_LOG_LEVEL=warn node --test --watch",
    "watch:ts": "tsc -p tsconfig.json --watch"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.679.0",
    "@fastify/csrf-protection": "^7.0.1",
    "@fastify/formbody": "^8.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/request-context": "^6.0.1",
    "@fastify/secure-session": "^8.1.0",
    "@fastify/sensible": "^6.0.1",
    "@fastify/static": "^8.0.2",
    "@fastify/view": "^10.0.1",
    "@hapi/hoek": "^11.0.4",
    "@jackdbd/notifications": "^1.0.3",
    "@jackdbd/telegram-text-messages": "^1.2.0",
    "@paulrobertlloyd/mf2tojf2": "^2.3.0",
    "@sinclair/typebox": "^0.33.17",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "better-queue": "^3.8.12",
    "better-queue-memory": "^1.0.4",
    "better-sqlite3": "^11.4.0",
    "close-with-grace": "^2.1.0",
    "dayjs": "^1.11.13",
    "dayjs-plugin-utc": "^0.1.2",
    "fast-safe-stringify": "^2.1.1",
    "fast-xml-parser": "^4.5.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "form-auto-content": "^3.2.1",
    "gray-matter": "^4.0.3",
    "html-to-text": "^9.0.5",
    "jose": "^5.9.6",
    "markdown-it": "^14.1.0",
    "mime": "^4.0.4",
    "nanoid": "^5.0.9",
    "nunjucks": "^3.2.4",
    "pino-pretty": "^11.3.0",
    "sanitize-html": "^2.13.1",
    "seedrandom": "^3.0.5",
    "slugify": "^1.6.6",
    "turndown": "^7.2.0",
    "yaml": "^2.6.0",
    "youch": "^3.3.4"
  },
  "devDependencies": {
    "@types/better-queue": "latest",
    "@types/better-sqlite3": "latest",
    "@types/html-to-text": "latest",
    "@types/markdown-it": "latest",
    "@types/node": "latest",
    "@types/nunjucks": "latest",
    "@types/sanitize-html": "latest",
    "@types/seedrandom": "latest",
    "@types/turndown": "latest",
    "npm-run-all": "^4.1.5",
    "table": "^6.8.2",
    "tsm": "latest",
    "typescript": "^5.6.3"
  }
}
